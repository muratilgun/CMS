
@{ ViewData["Title"] = "Index"; }

@model IEnumerable<Product>


<div class="row mt-2">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>List of Paroducts</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Image</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <img src="~/media/products/@item.Image" width="100" height="100" />
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger confirmDeletion">Delete</a>
                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-block btn-dark">Create new one</a>
            </div>
        </div>
    </div>
</div>

