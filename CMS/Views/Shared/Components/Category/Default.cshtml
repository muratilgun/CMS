@model IEnumerable<Category>

<ul class="list-group">

    <li class="list-group-item">
        <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">All Product</a>
    </li>

    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-controller="Product" asp-action="ProductsByCategory" asp-route-categorySlug="@item.Slug">@item.Name</a>
        </li>
    }
</ul>